<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="../images/logo.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <title>School</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Itim&family=Prompt:wght@100;400;600&family=Ubuntu:ital,wght@0,300;0,400;0,500;1,300;1,400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #2c3539;
      }
      * {
        font-family: "Itim", cursive;
        color: white;
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        list-style: none;
        text-decoration: none;
      }
      .my-container {
        padding-top: 100px;
      }

      .my-image-container {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      }

      .my-image-container img {
        transition: transform 0.3s;
      }

      .my-image-container:hover img {
        transform: scale(1.1);
      }

      .my-content {
        padding: 20px;
      }
      .navbar {
        display: flex;
      }
    </style>
  </head>
  <body>
    <!-- nav-bar -->
    <%- include("nav") %>
    <!-- body -->
    <div class="container my-container">
      <div class="row">
        <div class="col-lg-6">
          <div class="my-content">
            <h1 class="display-4 text-white">Welcome to School Supplies</h1>
            <p class="lead">
              Browse our wide selection of school supplies to kickstart your
              academic journey.
            </p>
            <% if (!user &&!usertype) { %>
            <a class="btn btn-danger" href="/productcustomer">Products</a>
            <% } else if(user &&!usertype) { %>
            <a class="btn btn-warning" href="/productlogin/<%= cmID%>"
              >Products</a
            >
            <% } else {%>
            <a class="btn btn-success" href="/products">Products</a>
            <% } %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="my-image-container">
            <img
              src="https://media.istockphoto.com/id/961530618/vector/school-supplies-and-items-set-on-a-sheet-in-a-cell-back-to-school-equipment-education.jpg?s=612x612&w=0&k=20&c=iaKKHLbfnViAeIu0arWZW-O9I_4Yp_8ODrKNW3lNHxI="
              alt="School Supplies"
              class="img-fluid rounded"
            />
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
      // Function to show a success toast notification
      function showSuccessToast(success) {
        Swal.fire({
          icon: "success",
          title: "Success!",
          text: success,
        });
      }

      // Check if a success message is present in the URL
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get("success") === "true") {
        showSuccessToast("SlipPayment Store in drive successs.");

        // Remove "success" query parameter without page reload
        const newURL = window.location.href.split("?")[0];
        history.replaceState({}, document.title, newURL);
      } else if (urlParams.get("success") === "logout") {
        showSuccessToast("Logout Successfully.");

        // Remove "success" query parameter without page reload
        const newURL = window.location.href.split("?")[0];
        history.replaceState({}, document.title, newURL);
      } else {
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
